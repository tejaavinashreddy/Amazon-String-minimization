class Solution
{
public static void main(String [] args)
{
static int solve(String s);
{
int l = 0;
int r = s.length() - 1;
while (l < r && s.charAt(l) == s.charAt(r)) 
{
int c = s.charAt(l);
while (l < r && s.charAt(l) == c) l++;
while (l < r && s.charAt(r) == c) r--;
}
if(l==r)
{
return 0 ;
}
return r - l + 1;
}
}
}
